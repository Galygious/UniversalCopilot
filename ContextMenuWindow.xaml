<!-- ContextMenuWindow.xaml -->
<Window x:Class="MyLLMIntegrationApp.ContextMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" 
        Topmost="True" SizeToContent="WidthAndHeight" ShowInTaskbar="False" 
        WindowStartupLocation="Manual">
    <Border Background="#EEEEEE" CornerRadius="5" Padding="5">
        <!-- We'll set Content dynamically in BuildMenus -->
        <StackPanel>
            <TextBlock Text="Loading menu..." />
        </StackPanel>
    </Border>
</Window>
